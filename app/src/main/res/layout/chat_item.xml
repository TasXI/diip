<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cons"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardIm"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="25dp"
        android:layout_width="50dp"
        android:layout_height="50dp">
            <ImageView
                android:id="@+id/chat_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_but"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:lines="1"
        android:id="@+id/chat_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:text="AJas"
        app:layout_constraintBottom_toBottomOf="@+id/cardIm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardIm"
        app:layout_constraintTop_toTopOf="@+id/cardIm" />

    <View android:layout_width="match_parent" android:layout_height="1dp"
        android:background="@color/design_default_color_primary_dark"
        app:layout_constraintTop_toBottomOf="@id/cardIm"
        android:layout_marginTop="2dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>