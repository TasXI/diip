<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">


    <TextView
        android:id="@+id/pheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Profile"
        android:textColor="@color/light_blue"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/pc"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="300dp"
        app:cardCornerRadius="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pheader">

        <ImageButton
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/circle_but"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/serName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Use"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/pc"
        app:layout_constraintStart_toStartOf="@+id/pc"
        app:layout_constraintTop_toBottomOf="@+id/pc" />

    <TextView
        android:id="@+id/pname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        android:textColor="#615d94"
        android:text="name1"
        app:layout_constraintEnd_toEndOf="@+id/serName"
        app:layout_constraintStart_toStartOf="@+id/serName"
        app:layout_constraintTop_toBottomOf="@+id/serName" />

    <TextView
        android:id="@+id/pname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name2"
        android:textColor="#615d94"
        android:layout_marginTop="10dp"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/pname1"
        app:layout_constraintStart_toStartOf="@+id/pname1"
        app:layout_constraintTop_toBottomOf="@+id/pname1" />

    <TextView
        android:id="@+id/pname3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="name3"
        android:textColor="#615d94"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/pname2"
        app:layout_constraintStart_toStartOf="@+id/pname2"
        app:layout_constraintTop_toBottomOf="@+id/pname2" />


</androidx.constraintlayout.widget.ConstraintLayout>